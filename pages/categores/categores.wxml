<view class="contain">
    <view class="weui-grids">
        <view class="weui-grid" wx:for="{{categores_list}}" wx:key="name">
            <navigator url="{{bookurl+'?cat_name='+item.cat_name}}">
                <view class='weui-grid__bg'>
                    <view class="weui-grid__icon">
                        <image src=" {{item.cat_cover}}" mode="scaleToFill" />
                    </view>
                    <text class="weui-grid__label">{{item.cat_name}}</text>
                </view>
            </navigator>
        </view>
    </view>
</view>
