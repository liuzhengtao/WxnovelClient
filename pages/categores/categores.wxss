.weui-grids {
    overflow: hidden;
}
.weui-grid {
    float: left;
    padding: 20px 10px;
    width: 40%;
    box-sizing: border-box;
}
.weui-grid__bg {
    position: relative;
    float: left;
    padding: 0px 30px;
    width: 110%;
    box-sizing: border-box;
}
 
.weui-grid__icon {
    width: 100px;
    height: 100px;
    margin: 0 auto;
}
 
 
 .weui-grid__icon image {
    display: block;
    width: 100%;
    height: 100%;
} 
 
.weui-grid__icon  .weui-grid__label {
    margin-top: 5px;
}
 
 
.weui-grid__label {
    display: block;
    text-align: center;
    font-weight: bold;
    color: #000;
    font-size: 14px;
    overflow: hidden; 
}
