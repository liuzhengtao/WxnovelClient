/* pages/test/test.wxss */
.section{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bookui_grid{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.bookui_grid_icon{
  width: 100%;
  height: 100%;
  padding: 3px 10px;
}
.bookui_grid_icon image{
  height: 100px;
  width: 80px;
}
.bookui_grid_title{
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 100px;
  overflow: hidden;
}
.bookui_grid_title .bookui_grid_name{
    font-size: 14px;
}
.bookui_grid_title .bookui_grid_introduce{
  display: -webkit-box; 
  font-size:28rpx; 
  color:#000000; 
  line-height: 40rpx; 
  word-break: break-all; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:3; 
  overflow: hidden; 
  text-overflow:ellipsis;
  font-weight: 300;
}
.bookui_grid_author_icon{
  position: relative;
  height: 20px;
  width: 20px;
}
.bookui_grid_author{
   position: relative;
   top: -15px;
   left: 20px;
   font-size: 12px;
   font-weight: 100;
}
.bookui_grid_score{
  border: 1px solid lightgreen;
  border-radius: 5px;
  position: absolute;
  bottom: 15px;
  right: 20px;
  font-size: 13px;
  color: lightgreen;
}
